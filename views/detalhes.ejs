<!DOCTYPE html>
<html lang="PT-BR">
  <head>
    <%- include ('./components/head') %>
  </head>
  <nav>
    <%- include ('./components/nav') %>
  </nav>
  <header>
    <%- include ('./components/header') %>
  </header>
  <body>

    <section class="detalhes">
    <section class="items">
      <div class="item2">
        <img src="<%= items.imagem %>" alt="item" />
      </div>
      <div class="itemDetalhes">
        <h2>Nome: <%= items.nome %></h2>
        <br>
        <br>
        <h2>Tamanho: <%= items.tamanho %></h2>
        <br>
        <br>
        <h2 id="itemDescricao">Descrição: <%= items.descricao %></h2>
        <br>
        <a id="editar" href="getById/<%= items.id%>/put">Editar</a>
        <a id="deletar" href="getById/<%= items.id%>/delete">Deletar</a>
      </div>
    </section>
    </section>
    <% if(itemPut != null) {%>
      <%- include ('./components/modelPut') %>
    <% } %>
    <footer>
        <%- include ('./components/footer') %>
    </footer>
  </body>
</html>
